<% layout('layouts/boilerplate') -%>

<h1>New Post!</h1>

<form action="/posts" method="POST" enctype="multipart/form-data">
  <div>
    <label for="title">Title: </label>
    <input type="text" id="title" name="post[title]" placeholder="Title">
  </div>

  <div>
    <label for="price">Price: </label>
    <input type="number" id="price" name="post[price]" step=".01" placeholder="Price">
  </div>

  <div>
    <label for="imageUpload">Images: </label>
    <input type="file" id="imageUpload" accept="images/*" name="images" multiple />
  </div>

  <div>
    <label for="description">Description: </label>
    <textarea name="post[description]" id="description" placeholder="Description"></textarea>
  </div>

  <div>
    <label for="location">Location: </label>
    <input type="text" id="location" name="post[location]" placeholder="Location">
  </div>

  <input type="submit">
</form>